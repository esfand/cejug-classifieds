<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">
	<converter>
		<converter-id>advertisementCategoryConverter</converter-id>
		<converter-class>net.java.dev.cejug.classifieds.richfaces.view.AdvertisementCategoryConverter
		</converter-class>
	</converter>
	<managed-bean>
		<managed-bean-name>helloClassifiedsBean</managed-bean-name>
		<managed-bean-class>net.java.dev.cejug.classifieds.richfaces.view.ClassifiedsServiceProxy
		</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>publishAdvertisementBean</managed-bean-name>
		<managed-bean-class>net.java.dev.cejug.classifieds.richfaces.view.PublishAdvertisementBean
		</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>registrationBean</managed-bean-name>
		<managed-bean-class>net.java.dev.cejug.classifieds.richfaces.view.RegistrationClientBean
		</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>securityBean</managed-bean-name>
		<managed-bean-class>net.java.dev.cejug.classifieds.richfaces.view.SecurityBean
		</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>categoryBean</managed-bean-name>
		<managed-bean-class>net.java.dev.cejug.classifieds.richfaces.view.Category
		</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>starRatingBean</managed-bean-name>
		<managed-bean-class>net.java.dev.cejug.classifieds.richfaces.view.StarRatingBean
		</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>vote</property-name>
			<value>#{param.vote}</value>
		</managed-property>
	</managed-bean>
	<navigation-rule>
		<from-view-id>/index.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>publishAdvertisement</from-outcome>
			<to-view-id>/pages/advertisement/publishAdvertisement.xhtml
			</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/pages/security/login.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{registrationBean.register}</from-action>
			<from-outcome>register</from-outcome>
			<to-view-id>/pages/security/registrationResults.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>home</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>starRating</from-outcome>
			<to-view-id>/pages/starRating/starRating.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<application>
		<view-handler>com.sun.facelets.FaceletViewHandler</view-handler>
		<message-bundle>messages</message-bundle>
		<locale-config>
			<default-locale>en</default-locale>
			<supported-locale>pt_BR</supported-locale>
			<supported-locale>bg</supported-locale>
			<supported-locale>de</supported-locale>
			<supported-locale>fr</supported-locale>
			<supported-locale>tr</supported-locale>
		</locale-config>
	</application>
</faces-config>
